<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:translationZ="5dp">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:swipeEnable="false"
        android:clickable="true"
        >

        <LinearLayout
            android:id="@+id/apk_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/BColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/apk_icon"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_android"/>

            <TextView
                android:id="@+id/item_apk_filename"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="@string/apk"
                android:textColor="@color/textColor"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/item_apk_delete"
            style="@style/file_item_select"
            android:background="#ff0000"
            android:text="删除"/>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>
</androidx.cardview.widget.CardView>